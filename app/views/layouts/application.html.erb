<!DOCTYPE html>
<html>
<head>
  <title>Ami</title>
  
  <%= javascript_include_tag 'https://js.stripe.com/v1/', 'jquery', 'application' %>
  <%= javascript_include_tag 'rails' %>

  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>


  <%= javascript_include_tag "fancybox/jquery.fancybox-1.3.4.pack.js" %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/fancybox/jquery.fancybox-1.3.4.css" />
  
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tag %>

  <link href='http://fonts.googleapis.com/css?family=Jura:400,300' rel='stylesheet' type='text/css'>

</head>
<body>

<div class="header_wrapper">
  <div class="top_nav_container">
    <div class="top_nav_wrapper">
      <% if current_user.nil? %>
        <%= link_to "LOGIN", log_in_path %> <%= link_to "SIGNUP", sign_up_path %> 
      <% else %>
        <%= link_to "LOGOUT", log_out_path %> 
        <%= link_to "PROFILE", edit_user_path(current_user) %> 
        <% if is_admin? %>
          <%= link_to "ADMIN PANEL", admin_path %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="main_nav_wrapper">
    <div class="logo_wrapper">
      <%= link_to image_tag("yumyumLogo30.jpg"), root_path() %>
    </div>
   
    <div class="main_nav_link_wrapper">
      <%= link_to "Startups", startups_path %>
      <%= link_to "Contributors", users_path(:user_type => 'Contributor') %>
      <%= link_to "About", about_path %>
      <%= link_to "Contact", new_email_path %>
      <%= link_to "FAQ", faqs_path %>
    </div>
  </div>
</div>

<div class="notification_wrapper">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
</div>

<div class="main_wrapper">

  <%= yield %>
</div>

<div class="footer_nav_wrapper">
  <%= link_to "Home", root_path %>
  <%= link_to "Startups", startups_path %>
  <%= link_to "Contributors", users_path(:user_type => 'Contributor') %>
  <%= link_to "About", about_path %>
  <%= link_to "Contact", new_email_path %>
  <%= link_to "FAQ", faqs_path %>
</div>  

<div class="footer">
  &#169; <%= Time.now.year %> <%= link_to 'AMI', root_path %> All Rights Reserved 
</div>

</body>
</html>
