<div class="description_wrapper"> 
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc_type %><br />
    <%= f.text_field :desc_type %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label 'Upload Content' %><br />
    <%= f.file_field :upload_content %>
  </div>
  <div>
    <%= link_to_remove_fields "Remove Description", f %>
  </div>
</div>
