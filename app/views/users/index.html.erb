
<div class="page_header">
  <% if !params[:user_type].nil? %>
    <%= params[:user_type].pluralize %>
  <% else %>
    Users
  <% end %>
</div>

<% if is_admin? %>
  <div class="controls_wrapper">
    <%= link_to (!params[:user_type].nil? ? 'New ' + params[:user_type] : 'New User'), new_user_path %>
  </div>
<% end %>

<div class="all_contributors_wrapper">
 
  <% @users.each do |user| %>
    <div class="each_contributors_wrapper">
      <%= link_to image_tag(user.photo.url(:small), :class => 'image_border'), user  %><br/>
      <%= link_to user.email, user %>
    </div>
  <% end %>

</div>

